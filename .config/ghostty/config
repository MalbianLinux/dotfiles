### General ###

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

cursor-style = block
cursor-style-blink = true

clipboard-read = allow
clipboard-write = allow

window-inherit-working-directory = true
window-decoration = false

confirm-close-surface = false

### Fonts ###

font-family = "JetBrains Mono"
font-size = 10

### Backround ###

background-opacity = 0.90

### Turn off Ligatures ###

font-feature = -dlig
font-feature = -liga
font-feature = -calt 

### Keybinds ####

keybind = control+shift+r=reload_config

keybind = control+shift+-=new_split:down
keybind = control+shift+'=new_split:right
keybind = control+shift+z=toggle_split_zoom

keybind = control+shift+h=goto_split:left
keybind = control+shift+j=goto_split:bottom
keybind = control+shift+k=goto_split:top
keybind = control+shift+l=goto_split:right
keybind = control+shift+p=goto_split:previous
keybind = control+shift+n=goto_split:next

keybind = control+up=adjust_selection:up
keybind = control+down=adjust_selection:down
keybind = control+left=adjust_selection:left
keybind = control+right=adjust_selection:right

keybind = control+shift+equal=equalize_splits
keybind = control+shift+up=resize_split:up,10
keybind = control+shift+down=resize_split:down,10
keybind = control+shift+left=resize_split:left,10
keybind = control+shift+right=resize_split:right,10

keybind = control+shift+enter=new_tab
keybind = control+comma=previous_tab
keybind = control+.=next_tab
keybind = control+shift+,=move_tab:-1
keybind = control+shift+.=move_tab:+1
keybind = control+shift+ยบ=toggle_tab_overview  


